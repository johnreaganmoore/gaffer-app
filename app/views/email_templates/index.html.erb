<div class="container">
  <div class="card team-card">
    <div class="card-content">

      <table class="bordered responsive-table">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @email_templates.each do |email_template| %>
            <tr>
              <td><%= email_template.name %></td>
              <td><%= link_to 'Edit', edit_email_template_path(email_template) %></td>
              <td><%= link_to 'Destroy', email_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>

<div class="fixed-action-btn">
  <a href="<%= new_email_template_path %>" class="btn-floating btn-large">
    <i class="large material-icons">add</i>
  </a>
</div>
