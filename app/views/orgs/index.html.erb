<div class="container">

  <% if @orgs.length == 0 %>
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <div class="card-title">
          Your First Organization
        </div>
        <p>
          It looks like you haven't set up your organization yet.<br>
          Click the button below to get started by creating your organization!
        </p>
      </div>
      <div class="edit-profile-actions card-action">
        <a class="btn waves-effect waves-light" href="<%= new_org_path %>">New Organization</a>
      </div>
    </div>
  <% else %>
    <% @orgs.each do |org| %>
      <%= render "org_item", org: org %>
    <% end %>
  <% end %>

</div>
