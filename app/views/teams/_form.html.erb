
<div class="card-content">
  <h4>Edit Team</h4>

  <%= form_for(team) do |f| %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div>
      <div class="profile-header">
      <% if team.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h2>

          <ul>
          <% team.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>


        <%= f.label :logo  do %>
          <div class="profile-avatar">
            <div class="section__circle--big large-avatar editable set-bg-elem">
                <%= image_tag "#{@team.display_logo}", class: "team-logo-img" %>
                <div class="change-label">Change</div>
            </div>
          </div>
        <% end %>
        <%= f.file_field :logo, style: "display: none;", class: 'photo_upload', onchange: "loadLogo(event)" %>

        <div class="row">
          <div class="input-field col s12">
            <%= f.text_field :name, class: "validate", required: true %>
            <%= f.label :name, data_error: "Hmm, not going to cut it.", data_success: "Nailed it!" %>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <input class="colorpicker set-bg-elem"  name="team[color]" id="team_color" value="<%= @team.color %>" />
          </div>
        </div>

    </div>
    </div>

</div>

<div class="edit-profile-actions card-action">
  <%= button_tag(type: 'submit', class: "btn waves-effect waves-light") do %>
    Save Team
  <% end %>
</div>

<% end %>

<script>
  var elem = $('.colorpicker')[0];
  var hueb = new Huebee( elem, {
    // options
    setBGColor: '.set-bg-elem',
    hues: 7,
    shades: 7,
    saturations: 1
  });
</script>
