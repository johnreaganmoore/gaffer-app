<!-- <div class="mini-header"></div> -->
<div class="main-content container">
  <div class="card team-card confirm">
    <div class="team-logo-container">
      <div class="section__circle--big large-avatar">
        <%= image_tag "#{@team.display_logo}", class: "team-logo-img" %>
      </div>
    </div>
    <div class="card-content">
      <p class="flow-text">
        Thanks for joining the <%= @team.name %> this season!
        Meet your teammates:
      </p>
    </div>
    <div class="divider"></div>
      <ul class="collection team">
        <% @team.people.each do |person| %>
          <li class="collection-item avatar valign-wrapper">
           <%= link_to profile_path(person) do %>
             <% if person.avatar.length > 2 then %>
             <img class="circle" src="<%= person.avatar %>">
             <% else %>
             <i class="material-icons circle valign">account_circle</i>
             <% end %>
           <% end %>
           <%= link_to profile_path(person) do %>
             <span class="valign"><%= person.first_name %> <%= person.last_name %></span>
           <% end %>
            <!-- <span class="secondary-content valign">
              <a class="secondary-content" href="mailto:<%= person.email %>"><i class="material-icons" style="color: <%= @team.color %>;">chat_bubble_outline</i></a>
            </span> -->
          </li>
        <% end %>
        <% if @pending_invitations.length > 0 %>
          <li class="collection-item avatar invitation-divider valign-wrapper">
            <span class="valign">
              Pending Invitations
            </span>
          </li>
          <% @pending_invitations.each do |invite| %>
            <li class="collection-item avatar valign-wrapper">
              <i class="material-icons circle">person</i>
              <span class="valign">
                <span class="title"><%= invite.first_name %> <%= invite.last_name %></span>
                <p >Invited <%= time_ago_in_words(invite.updated_at) %> ago.</p>
              </span>
            </li>
         <% end %>
        <% end %>
      </ul>
  </div>
  <div class="card blue-grey darken-1">
    <div class="card-content white-text">
      <p class="flow-text">
        You can invite others to join you this season with this link:
      </p>

      <div class="block-container">
        <code class="share-link">
          <span>
            <%= team_season_url(@team_season) %>
          </span>
        </code>
      </div>
    </div>
    <div class="card-action edit-profile-actions">
      <%= link_to "View Page", team_season_path(@team_season), class: "btn waves-effect waves-light", target: "_blank" %>
    </div>
  </div>
</div>
