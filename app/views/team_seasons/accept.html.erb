<div class="mini-header"></div>
<div class="left-pane hide-on-med-and-down">
  <div class="sauce-container">
    <%= image_tag 'sauce.png', class: "sauce-image" %>
  </div>
</div>

<div class="right-pane">
  <div class="season-preview-container container">
    <div class="card">
      <div class="card-content">
        <div class="season-title">
          <p style="color: <%= @team_season.team.color %>;">
            Let's Play Soccer
          </p>
        </div>
        <div class="season-dates">
          <% timeframe_array = [] %>
          <% @team_season.season.timeframes.each do |timeframe| %>
            <% timeframe_array.push(timeframe.friendly_label)  %>
          <% end %>
          <%= timeframe_array.to_sentence  %>
        </div>
        <div class="season-dates">
          <%= @team_season.season.location %>
        </div>
        <div class="season-dates">
          <% if @team_season.season.start_date != nil %>
            <span><%= @team_season.season.start_date.strftime("%B #{@team_season.season.start_date.day.ordinalize}") %> to <%= @team_season.season.end_date.strftime("%B #{@team_season.season.end_date.day.ordinalize}") %></span>
          <% end %>
        </div>
        <% if @team_season.cost != nil %>
          <div class="season-signup">
            <div class="season-cost"><span>Season Cost:</span><span><%= number_to_currency(@team_season.new_player_cost) %></span></div>
            <div class="season-cost"><span>Service Fee:</span><span><%= number_to_currency(@team_season.new_player_cost * 0.1)  %></span></div>
            <hr>
            <div class="season-cost"><span>Total Cost:</span><span><%= number_to_currency(@team_season.new_player_cost * 1.1)  %></span></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= render 'braintree_hosted_fields', person: @person, team_season: @team_season, client_token: @client_token %>
</div>
