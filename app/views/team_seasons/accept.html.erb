<div class="mini-header"></div>
<div class="left-pane">
  <div>
    <%= image_tag 'awesome-sauce.gif', style: "max-width: 400px; max-height: 300px;" %>
    <div class="awesome-sauce">Awesome Sauce!</div>
  </div>
</div>

<div class="right-pane">
  <div class="season-preview-container container">
    <div class="card">
      <div class="card-content">
        <div class="season-title">
          <p style="color: <%= @team_season.team.color %>;">
            <%= @team_season.sport %>
          </p>
        </div>
        <!-- <div class="season-logistics flow-text">
          <% timeframe_array = [] %>
          <% @team_season.timeframes.each do |timeframe| %>
            <% timeframe_array.push(timeframe.friendly_label)  %>
          <% end %>
          <%= timeframe_array.to_sentence  %>
        </div> -->
        <div class="season-dates">
          <% timeframe_array = [] %>
          <% @team_season.timeframes.each do |timeframe| %>
            <% timeframe_array.push(timeframe.friendly_label)  %>
          <% end %>
          <%= timeframe_array.to_sentence  %>
        </div>
        <div class="season-dates">
          <%= @team_season.location %>
        </div>
        <div class="season-dates">
          <% if @team_season.start_date != nil %>
            <span><%= @team_season.start_date.strftime("%B #{@team_season.start_date.day.ordinalize}") %> to <%= @team_season.end_date.strftime("%B #{@team_season.end_date.day.ordinalize}") %></span>
          <% end %>
        </div>
        <% if @team_season.cost != nil %>
          <div class="season-signup">
            <div class="season-cost"><span>Season Cost:</span><span><%= number_to_currency(@team_season.new_player_cost) %></span></div>
            <div class="season-cost"><span>Service Fee:</span><span><%= number_to_currency(@team_season.new_player_cost * 0.1)  %></span></div>
            <hr>
            <div class="season-cost"><span>Total Cost:</span><span><%= number_to_currency(@team_season.new_player_cost * 1.1)  %></span></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="season-checkout-container container">
    <%= form_tag transactions_path, id: "checkout-form" do %>
      <div id="error-message"></div>


      <div class="card">
        <div class="card-content">

          <% unless @person.id %>
            <p>Please enter your personal info:</p>

            <div class="row">
              <div class="input-field col s12 m6 l6">
                <%= text_field_tag :first_name %>
                <%= label_tag :first_name %>
              </div>

              <div class="input-field col s12 m6 l6">
                <%= text_field_tag :last_name %>
                <%= label_tag :last_name %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= email_field_tag :email %>
                <%= label_tag :email %>
              </div>
            </div>
          <% end %>

            <div class="row">
              <div class="input-field col s12">
                <input placeholder="4111 1111 1111 1111" class="hosted-fields" id="card-number"></input>
                <!-- <label for="card-number">Card Number</label> -->
              </div>
            </div>

          <label for="cvv">CVV</label>
          <div class="hosted-field" id="cvv"></div>

          <label for="expiration-date">Expiration Date</label>
          <div class="hosted-field" id="expiration-date"></div>


        </div>
        <div class="card-action edit-profile-actions">
          <input class="waves-effect waves-light btn white blue-grey-text" type="submit" value="Pay <%= number_to_currency(@team_season.new_player_cost * 1.1) %>" disabled>
        </div>
      </div>


      <input type="hidden" name="season" value="<%= @team_season.id %>">
      <input type="hidden" name="person" value="<%= @person.id %>">
      <input type="hidden" name="payment-method-nonce">
    <% end %>

    <!-- Load the Client component. -->
    <script src="https://js.braintreegateway.com/web/3.3.0/js/client.min.js"></script>

    <!-- Load the Hosted Fields component. -->
    <script src="https://js.braintreegateway.com/web/3.3.0/js/hosted-fields.min.js"></script>

    <script>
    // We generated a client token for you so you can test out this code
    // immediately. In a production-ready integration, you will need to
    // generate a client token on your server (see section below).
    var authorization = '';
    var submit = document.querySelector('input[type="submit"]');

    braintree.client.create({
      authorization: '<%= @client_token %>'
    }, function (clientErr, clientInstance) {
      if (clientErr) {
        // Handle error in client creation
        return;
      }

      braintree.hostedFields.create({
        client: clientInstance,
        styles: {
          'input': {
            'font-size': '1rem',
            'font-family': 'exo 2, lato, sans-serif'
          },
          'input.invalid': {
            'color': 'red'
          },
          'input.valid': {
            'color': 'green'
          }
        },
        fields: {
          number: {
            selector: '#card-number',
            placeholder: '4111 1111 1111 1111'
          },
          cvv: {
            selector: '#cvv',
            placeholder: '123'
          },
          expirationDate: {
            selector: '#expiration-date',
            placeholder: '10 / 2019'
          }
        }
      }, function (hostedFieldsErr, hostedFieldsInstance) {
        if (hostedFieldsErr) {
          // Handle error in Hosted Fields creation
          return;
        }

        submit.removeAttribute('disabled');
      });
    });
    </script>
  </div>
</div>
