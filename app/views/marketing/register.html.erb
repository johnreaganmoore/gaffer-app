<script>
  function checkTime(i) {
      if (i < 10) {
          i = "0" + i;
      }
      return i;
  }

  function startTime() {
      var now = new Date();
      var done = new Date(now.getTime() + 10*60000);
      var h = done.getHours();
      var m = done.getMinutes();
      var s = done.getSeconds();

      var ampm = h >= 12 ? 'pm' : 'am';
      // add a zero in front of numbers<10
      m = checkTime(m);
      s = checkTime(s);
      document.getElementById('done-time').innerHTML = h + ":" + m + ":" + s + ampm;
      t = setTimeout(function () {
          startTime()
      }, 500);
  }
  startTime();
</script>
