<div class="container">
  <div class="card team-card">
    <table class="bordered">
     <thead>
       <tr>
           <th data-field="name">Name</th>
           <th data-field="tags">Tags</th>
           <th data-field="next_reminder">Next Reminder</th>
           <th data-field="last_active">Last Activity</th>
       </tr>
     </thead>

     <tbody>
       <% @contacts.each do |contact| %>
        <tr>
          <td>
            <%= link_to contact_path(contact.id) do %>
              <%= contact.first_name %> <%= contact.last_name %>
            <% end %>
          </td>
           <td>
             <% contact.tags.each do |tag| %>
               <div class="chip">
                 <%= tag.name %>
               </div>
             <% end %>
           </td>
           <td>
             <% if contact.next_reminder %>
               <%= contact.next_reminder.strftime("%b %e")%>
             <% end %>
           </td>
           <td><%= time_ago_in_words(contact.latest_activity) %> ago</td>
        </tr>
       <% end %>
     </tbody>


   </table>

    <ul class="collection team">
      <li class="collection-item avatar valign-wrapper" style="padding-left: 15px;">
          <a href="<%= new_contact_path %>" class="btn-floating btn waves-effect waves-light valign" style="height: 42px; width: 42px;">
            <i class="material-icons" style="line-height: 42px;">add</i>
          </a>
        <%= link_to new_contact_path do %>
          <span class="valign" style="margin-left: 15px">Add A Contact</span>
        <% end %>
      </li>
    </ul>

  </div>
</div>
