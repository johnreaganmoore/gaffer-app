<div class="container">

  <div class="card blue-grey darken-1">
    <div class="card-content white-text">
      <div class="card-title">
        <%= @league.name %>
      </div>
      <p>
        Manage seasons and edit the basic information of this league.
      </p>
    </div>
  </div>

  <div class="card team-card">
    <div class="row">
      <div class="col s12">
        <ul class="tabs">
          <li class="tab col s4"><a class="active" href="#seasons">Seasons</a></li>
          <li class="tab col s4"><a href="#edit-tab">Edit League</a></li>
        </ul>
      </div>
      <div id="seasons" class="col s12">
        <ul class="collection team">
          <li>
            <ul class="collapsible team" data-collapsible="accordion">
              <% @league.seasons.each do |season| %>
                <li>
                  <a href="<%= edit_season_path(season) %>" class="collapsible-header team-season-item">
                    <div>
                      <i class="material-icons">event_available</i>
                      <% if season.start_date != nil %>
                         Season starting <%= season.start_date.strftime("%b #{season.start_date.day.ordinalize}") %>
                      <% else %>
                        Season with unspecified start date.
                      <% end %>
                    </div>
                  </a>
                </li>
              <% end %>
            </ul>
          </li>


          <li class="collection-item avatar valign-wrapper" style="padding-left: 15px;">
              <a href="<%= new_season_path(:league => @league.id) %>" class="btn-floating btn waves-effect waves-light valign" style="height: 42px; width: 42px;">
                <i class="material-icons" style="line-height: 42px;">add</i>
              </a>
            <%= link_to new_season_path(:league => @league.id) do %>
              <span class="valign" style="margin-left: 15px">Create New Season</span>
            <% end %>
          </li>
        </ul>
      </div>
      <div id="edit-tab" class="col s12">
        <%= render 'form' %>
      </div>

    </div>
  </div>

</div>
