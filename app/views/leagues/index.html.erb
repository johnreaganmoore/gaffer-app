<div class="container">

  <% if @leagues.length == 0 %>
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <div class="card-title">
          Your First League
        </div>
        <p>
          It looks like you haven't set up any leagues yet.
          In order to create seasons and get started with registrations you need to create at least one league.
          Click the button below to create a league!
        </p>
      </div>
      <div class="edit-profile-actions card-action">
        <a class="btn waves-effect waves-light" href="<%= new_league_path %>">New League</a>
      </div>
    </div>
  <% else %>
    <% @leagues.each do |league| %>
      <%= render "list_item", league: league %>
    <% end %>
  <% end %>

</div>
