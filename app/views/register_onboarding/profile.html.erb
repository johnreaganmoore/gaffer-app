<div class="mini-header"></div>
<!-- <div class="profile-page"> -->
  <div class="container">

    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <div class="card-title">
          Create Your Profile
        </div>
        <p>
          All of your information will be kept private.  We collect this information in compliance with Know Your Customer regulations in order to protect our users from fraud.
        </p>
      </div>
    </div>

    <div class="card">
    <%= form_for(@person, url: onboarding_path, method: :put) do |f| %>
      <div class="card-content">
        <div class="mdl-card__title mdl-card--expand">
          <div class="profile-header">

            <div class="row">
              <div class="input-field col s12 m6 l6">
                <%= f.text_field :first_name, required: true %>
                <%= f.label :first_name %>
              </div>

              <div class="input-field col s12 m6 l6">
                <%= f.text_field :last_name, required: true %>
                <%= f.label :last_name %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12 m6 l6">
                <%= f.email_field :email, required: true %>
                <%= f.label :email %>
              </div>

              <div class="input-field col s12 m6 l6">
                <%= f.date_field :date_of_birth, class: "datepicker birthdate", required: true %>
                <%= f.label :date_of_birth, class:"active"%>
              </div>
            </div>

          </div>
        </div>
      </div>
    <div class="edit-profile-actions card-action">
      <%= button_tag(type: 'submit', class: "btn waves-effect waves-light") do %>
        Save and Continue
      <% end %>
    </div>
    <% end %>
  </div>
</div>
