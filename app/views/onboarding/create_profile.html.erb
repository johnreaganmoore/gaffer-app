Create a person's profile

<%= form_for(@person, url: wizard_path, method: :put) do |f| %>
  <div class="field">
    <%= f.label :first_name, autofocus: true %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>

  <div class="actions">
    <%= f.submit "Next" %>
  </div>
<% end %>
