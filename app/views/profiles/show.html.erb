<% if @team != nil %>
  <% bg_color = @team.color %>
<% else %>
  <% bg_color = "#FFFFFF" %>
  <% secondary_color = "#f6f6f6" %>
<% end %>

<div class="profile-page">
  <div class="profile-card card">
    <div class="mdl-card__title mdl-card--expand">
      <div class="profile-header">
        <% if @person.avatar.length > 1 then %>
          <div class="profile-avatar">
            <div class="section__circle--big large-avatar">
                <img src="<%= @person.avatar %>">
            </div>
          </div>
        <% else %>
          <div class="profile-avatar">
            <div class="section__circle--big large-avatar">
                <%= image_tag "anonymous_material.png", id: "avatar" %>
            </div>
          </div>
        <% end %>
        <div class="profile-name">
          <h3><%= @person.first_name %> <%= @person.last_name %></h3>
        </div>
      </div>
    </div>
    <div class="profile-actions card-action">
      <%= link_to "mailto:#{@person.email}", class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect", remote: :true do %>
      Email
      <% end %>
      <% if @team != nil %>
        <%= link_to leave_team_path(:team => @team), class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect", data: {confirm: "Are you sure you want to remove #{@person.first_name} from #{@team.name}?"} do %>
        Delete
        <% end %>
      <% end %>
    </div>
    <% if @person == current_person %>
      <div class="mdl-card__menu">
        <%= link_to edit_profile_path(@person), class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" do %>
        Edit
        <% end %>
      </div>
    <% end %>
  </div>
</div>
