<div class="container">
  <div class="card blue-grey darken-1">
    <div class="card-content white-text">
      <div class="card-title">
        Add New Player
      </div>
      <p>
        You can add individual players via this form. To add multiple members by uploading a csv use <a style="color: #ffffff; font-weight: 700; text-decoration: underline;" href="<%= players_batch_path(team: @team_membership.team.id) %>">batch create</a>.
      </p>
    </div>
  </div>

  <div class="card">
    <%= form_for(@person, url: create_player_path, method: :post) do |f| %>
      <div class="card-content">
        <div class="row">
          <div class="input-field col m6 l6 s12">
            <%= f.text_field :first_name %>
            <%= f.label :first_name %>
          </div>

          <div class="input-field col m6 l6 s12">
            <%= f.text_field :last_name %>
            <%= f.label :last_name %>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= f.email_field :email %>
            <%= f.label :email %>
          </div>
        </div>

        <%= f.fields_for @team_membership do |tm_fields| %>
          <%= tm_fields.hidden_field :id, value: @team_membership.id %>
        <% end %>
      </div>
      <div class="edit-profile-actions card-action">
        <%= button_tag(type: 'submit', class: "btn waves-effect waves-light") do %>
          Save
        <% end %>
      </div>
    <% end %>
  </div>
</div>
