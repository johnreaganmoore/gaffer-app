.community-last {
  display: flex;
  justify-content: center;
  background: $primary-color;
  background-image: linear-gradient( 0deg, $primary-color, $secondary-color );
  margin-top: 100px;

  .container {
    margin-top: 150px;
    margin-bottom: 100px;
  }

  .price-line {
    // font-family: lato;
    color: $white;
    font-size: 48px;
    font-weight: 600;
  }

  .price-detail {
    margin-top: 25px;
    color: $white;
    font-size: 18px;
    font-weight: 100;
  }

  .btn {
    color: $dark-font;
  }

  .btn-flat {
    color: $white;
  }
}

.collapsible {

  .org-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    cursor: pointer;
    min-height: 3rem;
    line-height: 3rem;
    padding: 1rem 1rem;
    background-color: #fff;
    // background-color: #5f5f5f;
    border-bottom: 1px solid #ddd;

    a {
      // color: $white;
      font-size: 18px;
      font-weight: 300;
      text-decoration: underline;
    }

  }

  .collapsible-header {
    display: flex;
    justify-content: space-between;

    .price {
      color: $secondary-color;
    }
  }

  .collapsible-body {
    padding: 1rem;

    .opp-section-title {
      color: $light-font;
      border-bottom: 1px solid $faint;
      margin-bottom: 0.8rem;
    }

    .opp-section-body {
      margin-bottom: 1.2rem;

      &.last {
        margin-bottom: 0px;
      }

      .next-start-time {
        font-weight: 600;
      }

      .location-name {
        font-weight: 600;
      }

      .location-address {
        text-decoration: underline;
      }

    }

  }


}
