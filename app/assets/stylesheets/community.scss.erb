.community-hero {
  text-align: center;
  display: flex;
  justify-content: center;
  // background: rgba(62,115,0,0.85);
  background-color: rgba(255, 255, 255, 0.8);
  // background-image: linear-gradient( 180deg, $primary-color, $secondary-color );
  padding-top: 150px;
  padding-bottom: 100px;
}

.community-title {
  color: $secondary-color;
  font-size: 48px;
  font-weight: 600;
}

.community-slogan {
  color: $secondary-color;
  font-size: 30px;
  font-weight: 100;
  margin-bottom: 100px;
}

.community-desc {
  color: $secondary-color;
  font-size: 28px;
  font-weight: 400;
  // max-width: 600px;
  margin: 0 auto;
}

.community-last-overlay {
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
}

